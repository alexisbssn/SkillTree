{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": ["node"],
        "declaration": false,
        "mapRoot": "/",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true
    },
    "exclude": [
        "node_modules/*"
    ],
    "filesGlob": [
      "**/*.ts"
    ],
    "atom": {
      "rewriteTsconfig": false
    }
}
